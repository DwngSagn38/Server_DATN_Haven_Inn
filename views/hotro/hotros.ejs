<%- include('../main/header.ejs') %>

    <div class="container">
        <h1>Danh sách Hỗ trợ</h1>

        <% if (message) { %>
            <div class="alert alert-warning" id="successMessage">
                <%= message %>
            </div>
            <% } %>
                <table id="dichVuTable" class="table table-striped table-bordered table-hover mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center" style="width: 240px">Người cần hỗ trợ</th>
                            <th class="text-center">Vấn đề</th>
                            <th class="text-center" style="width: 120px">Trạng thái</th>
                            <th class="text-center" style="width: 120px">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% hotros.forEach(hotro=> { %>
                            <tr>
                                <td>
                                    <%= hotro.id_NguoiDung.tenNguoiDung %>
                                </td>
                                <td>
                                    <%= hotro.vanDe %>
                                </td>
                                <td>
                                    <% let statusText='' ; if (hotro.trangThai===0) { statusText='Chưa xử lý' ; } else
                                        if (hotro.trangThai===1) { statusText='Đang xử lý' ; } else if
                                        (hotro.trangThai===2) { statusText='Hoàn thành' ; } %>
                                        <%= statusText %>
                                </td>

                                <td class="text-center">
                                    <a href="javascript:void(0)" class="btn btn-primary btn-edit-dichvu btn-sm"
                                        data-id="<%= hotro._id %>" data-trangThai="<%= hotro.trangThai %>"
                                        data-tenNguoiDung="<%= hotro.id_NguoiDung.tenNguoiDung %>"
                                        data-vanDe="<%= hotro.vanDe %>" data-bs-toggle="modal"
                                        data-bs-target="#serviceModal">Sửa</a>
                                    <!-- <button class="btn btn-danger btn-sm btn-delete-dichvu" data-id="<%= hotro._id %>"
                                        data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Xóa</button> -->
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa dịch vụ <strong id="serviceName"></strong> không?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <form id="confirmDeleteButton" method="POST">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% if (message) { %>


        <script>
            // Đặt thời gian hiển thị thông báo là 2 giây (2000ms)
            setTimeout(function () {
                var messageElement = document.getElementById("successMessage");
                if (messageElement) {
                    messageElement.style.display = "none"; // Ẩn thông báo sau 2 giây
                }
            }, 2000);
        </script>
        <% } %>


            <!-- Modal chung cho Thêm và Sửa dịch vụ -->
            <div class="modal fade" id="serviceModal" tabindex="-1" aria-labelledby="serviceModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- Form sẽ được thay đổi động khi mở modal -->
                        <form id="serviceForm" action="/web/hotros/put" method="PUT">
                            <div class="modal-header">
                                <h5 class="modal-title" id="serviceModalLabel">Cập nhật Trạng thái</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                                <!-- Tên dịch vụ -->

                                <!-- Mô tả -->
                                <div class="mb-3">
                                    <label for="vanDe" class="form-label">Vấn đề</label>
                                    <textarea class="form-control" id="vanDe" name="vanDe" rows="4" readonly
                                        required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="trangThai" class="form-label">Trạng thái</label>
                                    <select class="form-select" id="trangThai" name="trangThai" required>
                                        <option value="0">Chưa xử lý</option>
                                        <option value="1">Đang xử lý</option>
                                        <option value="2">Hoàn thành</option>
                                    </select>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                <button type="submit" class="btn btn-success">Lưu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <%- include('../main/footer.ejs') %>
                <%- include('./hotro_js.ejs') %>